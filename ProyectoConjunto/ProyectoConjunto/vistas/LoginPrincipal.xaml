<Window x:Class="ProyectoConjunto.LoginPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoConjunto"
        mc:Ignorable="d"
        Title="LoginPrincipal" Height="450" Width="800">
    <Window.Resources>
        <!-- Animación para cambiar el fondo a rojo y luego hacerlo transparente -->
        <Storyboard x:Key="LabelBackgroundAnimation">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" 
                                          Duration="0:0:3">
                <!-- Cambiar el fondo a rojo -->
                <LinearColorKeyFrame Value="Red" KeyTime="0:0:1" />
                <!-- Hacerlo transparente -->
                <LinearColorKeyFrame Value="Transparent" KeyTime="0:0:3" />
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

        <Style x:Key="BotonRedondo" TargetType="Button">
            <Setter Property="Background" Value="#BCCCDC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                     CornerRadius="15" 
                     BorderBrush="#9AA6B2" 
                     BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightSkyBlue"/>
                    <Setter Property="Foreground" Value="LightSkyBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>
    <Grid>
        <!-- Fondo de la ventana -->
        <Grid.Background>
            <ImageBrush ImageSource="/images/PosibleFondo.jpg"/>
        </Grid.Background>

        <!-- Contenedor central que ajusta el Canvas -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Name="canvas" Width="800" Height="450">
                <Image Height="120" Canvas.Left="340" Canvas.Top="56" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/images/logintransparente.png" Panel.ZIndex="1" />
                <Label Content="Nombre de usuario:" Canvas.Left="340" Canvas.Top="181" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" FontFamily="Yu Gothic UI Semibold"  />
                <TextBox Canvas.Left="340" TextWrapping="Wrap" Canvas.Top="212" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Yu Gothic UI Light" Background="Transparent" BorderBrush="#FF96ADF6" Opacity="0.6"/>
                <Label Content="Contraseña:" Canvas.Left="340" Canvas.Top="230" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" FontFamily="Yu Gothic UI Semibold"/>
                <TextBox Canvas.Left="340" TextWrapping="Wrap" Canvas.Top="261" Width="120" FontFamily="Yu Gothic UI Light" Opacity="0.6" Background="Transparent" BorderBrush="#FF96ADF6" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Button Content="Iniciar sesión" Style="{StaticResource BotonRedondo}" Foreground="DarkGray" Canvas.Left="340" Canvas.Top="289" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Height="22" FontSize="7" FontFamily="Yu Gothic UI Semibold" Click="IniciarSesionClick" />
                <Button Content="Registrar cuenta" Style="{StaticResource BotonRedondo}" Foreground="DarkGray" Canvas.Left="400" Canvas.Top="289" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="58" FontSize="7" FontFamily="Yu Gothic UI Semibold"/>
                <Button Name="recuperarContraseña" Content="¿Has olvidado tu contraseña?" Canvas.Left="333" Canvas.Top="319" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" FontSize="8"  FontFamily="Yu Gothic UI Semibold" Visibility="Hidden"/>
                <Label Content="¿Has olvidado tu contraseña?" Canvas.Left="336" Canvas.Top="316" HorizontalAlignment="Center" VerticalAlignment="Center" Width="128" FontSize="8" FontWeight="Bold" Foreground="#FFB9D6F6" FontFamily="Yu Gothic UI Semibold" />
                <Label Name="errorInicioSesion" Content="" Canvas.Left="381" Canvas.Top="25" HorizontalAlignment="Center"/>
            </Canvas>
        </Grid>
    </Grid>
</Window>

